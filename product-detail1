    <script>
        const header = document.querySelector('.header');
        window.addEventListener('scroll', function() {
            const currentScroll = window.pageYOffset;
            if (currentScroll > 50) {
                header.classList.add('shrink');
            } else {
                header.classList.remove('shrink');
            }
        });
